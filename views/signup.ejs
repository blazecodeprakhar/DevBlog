<%- include('partials/header') %>

    <div class="form-container animate-fade-in">
        <h1>Create Account</h1>

        <% if (locals.error) { %>
            <div
                style="background-color: #fee2e2; color: #ef4444; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                <%= error %>
            </div>
            <% } %>

                <form action="/signup" method="POST">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name..."
                            required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" id="phone" name="phone" class="form-control"
                            placeholder="Enter your phone number..." required>
                    </div>

                    <div class="form-group">
                        <label for="password">Password/Passcode</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Create a password..." required>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                </form>
                <p style="text-align: center; margin-top: 20px; color: var(--text-secondary);">
                    Already have an account? <a href="/login"
                        style="color: var(--primary); text-decoration: none; font-weight: 500;">Login</a>
                </p>
    </div>

    <%- include('partials/footer') %>